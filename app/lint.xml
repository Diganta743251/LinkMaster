    <!-- Custom suppressions for specific cases -->
    
    <!-- Allow some flexibility in test code -->
    <issue id="HardcodedText">
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
        <ignore path="**/demo/**" />
    </issue>
    
    <!-- Allow logging in debug builds -->
    <issue id="LogConditional">
        <ignore path="**/debug/**" />
    </issue>
    
    <!-- Suppress some issues for generated code -->
    <issue id="UnusedResources">
        <ignore path="**/build/**" />
    </issue>
    
    <!-- Allow missing translations for now (can be enabled later) -->
    <issue id="MissingTranslation" severity="informational" />
    
    <!-- Suppress content description for decorative elements -->
    <issue id="ContentDescription">
        <ignore regexp=".*decorative.*" />
        <ignore regexp=".*background.*" />
        <ignore regexp=".*divider.*" />
    </issue>
    
    <!-- Allow some performance trade-offs for better UX -->
    <issue id="DrawAllocation" severity="informational" />
    
    <!-- Custom rules for LinkMaster -->
    
    <!-- Ensure all URLs are validated -->
    <issue id="StringFormatInvalid">
        <ignore regexp=".*url.*" />
    </issue>
    
    <!-- Ensure proper error handling -->
    <issue id="RethrowException" severity="error" />
    <issue id="UnknownNullness" severity="warning" />
    
    <!-- Ensure proper resource management -->
    <issue id="Recycle" severity="error" />
    <issue id="CommitTransaction" severity="error" />
