<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- LinkMaster Data Extraction Rules (Android 12+) -->
    
    <!-- Cloud backup rules -->
    <cloud-backup>
        <!-- Include only non-sensitive preferences -->
        <include domain="sharedpref" path="app_preferences.xml" />
        <include domain="sharedpref" path="ui_preferences.xml" />
        <include domain="sharedpref" path="theme_preferences.xml" />
        
        <!-- Exclude all sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="linkmaster_secure_prefs.xml" />
        <exclude domain="sharedpref" path="linkmaster_secure_prefs_fallback.xml" />
        <exclude domain="sharedpref" path="encrypted_prefs.xml" />
        <exclude domain="database" />
        <exclude domain="cache" />
        <exclude domain="external" />
        <exclude domain="file" path="sensitive/" />
        <exclude domain="file" path="temp/" />
        <exclude domain="file" path="qr_codes/" />
        <exclude domain="file" path="exports/" />
    </cloud-backup>
    
    <!-- Device transfer rules -->
    <device-transfer>
        <!-- Allow basic preferences transfer -->
        <include domain="sharedpref" path="app_preferences.xml" />
        <include domain="sharedpref" path="ui_preferences.xml" />
        <include domain="sharedpref" path="theme_preferences.xml" />
        
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="linkmaster_secure_prefs.xml" />
        <exclude domain="sharedpref" path="linkmaster_secure_prefs_fallback.xml" />
        <exclude domain="sharedpref" path="encrypted_prefs.xml" />
        <exclude domain="database" />
        <exclude domain="cache" />
        <exclude domain="external" />
        <exclude domain="file" path="sensitive/" />
        <exclude domain="file" path="temp/" />
        <exclude domain="file" path="qr_codes/" />
        <exclude domain="file" path="exports/" />
    </device-transfer>
    
</data-extraction-rules>