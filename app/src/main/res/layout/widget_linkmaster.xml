<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Widget Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LinkMaster"
            android:textColor="@color/widget_text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/widget_refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh"
            android:scaleType="centerInside"
            android:src="@drawable/ic_refresh" />

    </LinearLayout>

    <!-- Link 1 -->
    <LinearLayout
        android:id="@+id/widget_link_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:background="@drawable/widget_link_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_link"
            android:tint="@color/widget_accent" />

        <TextView
            android:id="@+id/widget_link_text_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Link 1"
            android:textColor="@color/widget_text_primary"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Link 2 -->
    <LinearLayout
        android:id="@+id/widget_link_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:background="@drawable/widget_link_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_link"
            android:tint="@color/widget_accent" />

        <TextView
            android:id="@+id/widget_link_text_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Link 2"
            android:textColor="@color/widget_text_primary"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Link 3 -->
    <LinearLayout
        android:id="@+id/widget_link_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:background="@drawable/widget_link_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_link"
            android:tint="@color/widget_accent" />

        <TextView
            android:id="@+id/widget_link_text_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Link 3"
            android:textColor="@color/widget_text_primary"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>