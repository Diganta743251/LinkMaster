<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <solid android:color="@color/shadow_dark" />
                </shape>
            </item>
            <!-- Main surface -->
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <gradient
                        android:angle="135"
                        android:startColor="@color/gradient_end"
                        android:endColor="@color/gradient_start" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="3dp" android:left="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <solid android:color="@color/shadow_dark" />
                </shape>
            </item>
            <!-- Main surface -->
            <item android:bottom="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <gradient
                        android:angle="135"
                        android:startColor="@color/gradient_start"
                        android:endColor="@color/gradient_end" />
                </shape>
            </item>
            <!-- Highlight -->
            <item 
                android:bottom="3dp" 
                android:right="3dp"
                android:top="2dp"
                android:left="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <gradient
                        android:angle="135"
                        android:startColor="#40FFFFFF"
                        android:centerColor="#20FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>